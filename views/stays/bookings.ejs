<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h4 class="mt-3">Your Bookings</h4>

    <div class="mt-3">
      <% for(let item of allBookings) { %> 
        <div class = "bookingItem mt-3">
        <img src="<%= item.stay.image.url %>" width="70px" height="100px"/>
        <div class="ms-2 bookingItemInfo">
          <p class="mb-1"> <%= item.stay.title%></p>
          <p class="mb-1" style="font-size: 0.7rem"><b>Check-In:</b> <%=new Date(item.checkIn).toDateString()%></p>
          <p class="mb-1" style="font-size: 0.7rem"><b>Check-Out:</b> <%=new Date(item.checkOut).toDateString()%></p>
        </div>
        </div>
      <%}%>
    </div>
  </div>
</div>
